<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-5dp"
        android:background="@color/color_ffffff"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rootLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/linear0"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_f5f5f5"
                        android:orientation="vertical"
                        android:paddingBottom="15dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="25dp"
                            android:text="@string/daren_desc1"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="11dp"
                            android:text="@string/daren_desc2"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="21dp"
                            android:layout_marginTop="11dp"
                            android:text="@string/daren_desc3"
                            android:textColor="@color/color_333333"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@color/color_ffffff"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.yjfshop123.live.ui.widget.RoundFrameLayout
                                android:id="@+id/shenfen_one_ll"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/card1">

                                <ImageView
                                    android:id="@+id/shenfen_one"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/color_style"
                                    android:gravity="center"
                                    android:text="身份证正面"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </com.yjfshop123.live.ui.widget.RoundFrameLayout>
                            <com.yjfshop123.live.ui.widget.RoundFrameLayout
                                android:id="@+id/shenfen_two_ll"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"
                                android:layout_height="120dp"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/card2">

                                <ImageView
                                    android:id="@+id/shenfen_two"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/color_style"
                                    android:gravity="center"
                                    android:text="身份证反面"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </com.yjfshop123.live.ui.widget.RoundFrameLayout>
                            <com.yjfshop123.live.ui.widget.RoundFrameLayout
                                android:id="@+id/card1Layout"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_marginStart="10dp"

                                android:layout_height="120dp"

                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:layout_marginBottom="15dp"

                                android:background="@drawable/daren_icon1">

                                <ImageView
                                    android:id="@+id/mengban1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="35dp"
                                    android:layout_gravity="bottom"
                                    android:background="@color/color_style"
                                    android:gravity="center"
                                    android:text="@string/daren_shenghuo"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                            </com.yjfshop123.live.ui.widget.RoundFrameLayout>



                        </LinearLayout>


                        <View
                            android:layout_width="match_parent"
                            android:layout_height="15dp"
                            android:background="@color/color_f5f5f5" />

                        <RelativeLayout
                            android:id="@+id/voiceJieshao"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="11dp"
                                android:text="语音介绍"
                                android:textColor="@color/color_333333"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="15dp"
                                android:src="@drawable/myself_right_icon" />

                            <TextView
                                android:id="@+id/voiceJieshao_hint"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="30dp"
                                android:text="(必填项)"
                                android:textColor="@color/color_999999"
                                android:textSize="12sp" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="41dp"
                    android:layout_below="@+id/linear0"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape_ffd100_20_button"
                    android:stateListAnimator="@null"
                    android:text="@string/daren_submit"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rootLayout2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_ffffff"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/root1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/daren_bg"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/daren_img1" />

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/img1"
                            android:layout_gravity="center"
                            android:layout_marginTop="31dp"
                            android:text="@string/daren_txt1"
                            android:textColor="@color/color_000000"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/linear1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/text1"
                            android:layout_gravity="center"
                            android:layout_marginTop="21dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/daren_img2" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/daren_txt2"
                                android:textColor="#545454"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/linear1"
                            android:layout_gravity="center"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/daren_img3" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/daren_txt3"
                                android:textColor="#545454"
                                android:textSize="13sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/root1"
                        android:layout_gravity="center"
                        android:layout_marginTop="31dp"
                        android:text="@string/daren_txt4"
                        android:textColor="@color/color_000000"
                        android:textSize="17sp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="36dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/daren_img4" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/daren_txt5"
                                android:textColor="#313131"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/daren_img5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/daren_txt6"
                                android:textColor="#313131"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="36dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/daren_img6" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/daren_txt7"
                                android:textColor="#313131"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="36dp"
                            android:layout_marginRight="36dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/daren_img7" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text="@string/daren_txt8"
                                android:textColor="#313131"
                                android:textSize="15sp" />

                        </LinearLayout>
                    </RelativeLayout>

                    <Button
                        android:id="@+id/darenBtn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="45dp"
                        android:layout_marginTop="42dp"
                        android:layout_marginRight="45dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/shape_ffd100_20_button"
                        android:stateListAnimator="@null"
                        android:text="@string/daren_shenqing"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>