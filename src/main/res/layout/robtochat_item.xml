<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <com.yjfshop123.live.server.widget.CircleImageView
            android:id="@+id/robtochat_item_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/robtochat_item_vip_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon_vip"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/robtochat_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/robtochat_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="10sp" />
        </LinearLayout>


        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ql_dialog_bg3"
            android:gravity="center"
            android:text="@string/ql_2"
            android:textColor="@color/color_style"
            android:textSize="12dp" />

    </RelativeLayout>

</LinearLayout>