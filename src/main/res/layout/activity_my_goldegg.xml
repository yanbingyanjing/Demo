<?xml version="1.0" encoding="utf-8"?>
<com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/heijin"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="39dp"

            android:layout_marginEnd="20dp">

            <com.yjfshop123.live.server.widget.RoundImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/one"
                android:layout_alignEnd="@+id/one"
                android:layout_alignBottom="@+id/one"
                android:scaleType="fitXY"
                app:radius="10dp"
                android:src="@mipmap/bg_my_gold" />


            <LinearLayout
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="22dp"
                android:paddingTop="25dp"
                android:paddingEnd="22dp"
                android:paddingBottom="18dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/jindan_one" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_title"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/color_9F8359"
                        android:textSize="14sp" />


                </LinearLayout>

                <TextView
                    android:id="@+id/total_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="0"
                    android:textColor="@color/color_735541"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/color_CEAF82" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/jindan_two" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
android:layout_marginStart="9dp"
                        android:text="@string/medaling_egg"
                        android:textColor="@color/color_9F8359"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/medaling_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="0"

                        android:textColor="@color/color_735541"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/suocang_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/bg_duihuan"
                        android:paddingStart="9dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="9dp"

                        android:paddingBottom="3dp"
                        android:text="@string/chakan"
                        android:textColor="@color/color_CEAF82"
                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/jindan_three" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="9dp"

                        android:text="@string/additioning_egg"
                        android:textColor="@color/color_9F8359"
                        android:textSize="14sp" />


                    <TextView
                        android:id="@+id/addition_num"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="0"

                        android:textColor="@color/color_735541"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/jiacheng_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/bg_duihuan"
                        android:paddingStart="9dp"
                        android:paddingTop="3dp"
                        android:paddingEnd="9dp"
                        android:paddingBottom="3dp"
                        android:text="@string/chakan"
                        android:textColor="@color/color_CEAF82"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"

                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:src="@mipmap/jindan_four" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/can_exchange"
                        android:layout_marginStart="9dp"

                        android:textColor="@color/color_9F8359"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/exchange_num"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:gravity="center_vertical"
                        android:text="0"

                        android:textColor="@color/color_735541"
                        android:textSize="20sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginEnd="22dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/turn_out_egg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bg_duihuan"
                        android:gravity="center"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp"
                        android:text="@string/duihuan"
                        android:textColor="@color/color_CEAF82"
                        android:textSize="16sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/turnin_egg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/target_name_bg"
                        android:gravity="center"
                        android:paddingStart="35dp"
                        android:paddingTop="11dp"
                        android:paddingEnd="35dp"
                        android:paddingBottom="11dp"
                        android:text="@string/turnin_egg"
                        android:textColor="@color/white"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout>
