<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_theme"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <com.yjfshop123.live.server.widget.CircleImageView
            android:id="@+id/imgHead"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="45dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="@color/color_title_txt"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/tv_vip_expire_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text=""
                android:textColor="@color/color_content_txt"
                android:textSize="12sp"
                android:visibility="gone" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBecomeVip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/bg_80ffd100_ccffd100_50_left"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="8dp"
            android:paddingBottom="5dp"
            android:text="@string/vip_1"
            android:textColor="@color/white"
            android:textSize="12.0sp" />

    </FrameLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tvQingXZ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:paddingTop="9.5dp"
        android:paddingBottom="9.099976dip"
        android:text="@string/vip_2"
        android:textColor="@color/color_title_txt"
        android:textSize="14.0sp" />

    <View
        android:id="@+id/line2"
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/line_color" />
</LinearLayout>