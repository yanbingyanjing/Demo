<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_1b1a17_4"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="25dp"
    android:paddingTop="24dp"
    android:paddingEnd="25dp"
    android:paddingBottom="26dp">

    <ImageView
        android:id="@+id/close"
        android:layout_width="54dp"
        android:layout_height="54dp"


        android:src="@mipmap/duihao"
        android:textColor="@color/color_3B3A37" />

    <TextView
        android:id="@+id/content"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="@string/partner_apply_success"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/confir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:background="@drawable/bg_gradient_fae2ae_b28d51_21"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="14sp" />

</LinearLayout>