<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/roo_view"
    android:visibility="invisible"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/rootL"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/detail"
                android:layout_alignBottom="@+id/detail"
                android:scaleType="fitXY"
                android:src="@mipmap/choujiang_bg" />

            <RelativeLayout
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >


                <ImageView
                    android:id="@+id/dajiang_tip"
                    android:layout_width="275dp"
                    android:layout_height="196dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="24dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/dajiang_tip" />

                <RelativeLayout
                    android:id="@+id/ha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dajiang_tip"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="20dp">

                    <ImageView
                        android:id="@+id/taijie_one"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/sss"
                        android:layout_marginTop="-35dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/taijie_one" />

                    <LinearLayout
                        android:id="@+id/sss"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginEnd="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/one"
                            android:layout_width="0dp"
                            android:layout_height="119dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/dan_one" />

                        <ImageView
                            android:id="@+id/two"
                            android:layout_width="0dp"
                            android:layout_height="119dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/dan_two" />

                        <ImageView
                            android:id="@+id/three"
                            android:layout_width="0dp"
                            android:layout_height="119dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/dan_three" />
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/ja"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@+id/ha"
                    android:layout_marginTop="-5dp"
                    android:background="@mipmap/taijie_two" />

                <ImageView
                    android:id="@+id/taijie_three"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_below="@+id/ja"

                    android:scaleType="fitXY"
                    android:src="@mipmap/taijie_three" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/taijie_three"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="45dp"
                        android:layout_marginEnd="45dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/four"
                            android:layout_width="0dp"
                            android:layout_height="119dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/dan_four" />

                        <ImageView
                            android:id="@+id/five"
                            android:layout_width="0dp"
                            android:layout_height="119dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/dan_five" />

                        <ImageView
                            android:id="@+id/six"
                            android:layout_width="0dp"
                            android:layout_height="119dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@mipmap/dan_six" />
                    </LinearLayout>

                </RelativeLayout>

                <ImageView
                    android:id="@+id/canyu"
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:layout_below="@+id/taijie_three"
                    android:background="@mipmap/choujiang_dibu" />

                <ImageView

                    android:layout_width="40dp"
                    android:layout_height="80dp"
                    android:layout_below="@+id/taijie_three"
                    android:layout_marginTop="-30dp"
                    android:background="@mipmap/caidai" />

                <ImageView

                    android:layout_width="80dp"
                    android:layout_height="128dp"
                    android:layout_alignBottom="@+id/canyu"
                    android:layout_alignParentEnd="true"

                    android:layout_marginBottom="10dp"
                    android:background="@mipmap/xiaofangkuai" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gift_gif"
        android:layout_width="300dp"
        android:layout_height="239dp"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/zajindan"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/zuihou"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/color_80000000"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/tanhua" />

        <ImageView
            android:id="@+id/t"
            android:layout_width="200dp"
            android:layout_height="278dp"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"
            android:src="@mipmap/dansui_tanchuang" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="手气不错！恭喜抢到"
            android:textColor="@color/color_BA8500"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignTop="@+id/t"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:textColor="@color/color_B87C00"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_below="@+id/t"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19dp"
            android:src="@mipmap/chahao" />
    </RelativeLayout>

</RelativeLayout>