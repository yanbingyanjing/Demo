<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gift_item_icon"
            android:layout_width="34dp"
            android:layout_height="34dp" />

        <TextView
            android:id="@+id/gift_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textColor="@color/color_content_txt"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/gift_item_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:textColor="@color/color_style"
            android:textSize="9dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/gift_item_choose"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="24dp"
        android:src="@drawable/complaint_choose_act"
        android:visibility="gone" />

</FrameLayout>