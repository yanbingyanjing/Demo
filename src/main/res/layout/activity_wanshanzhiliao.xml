<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <com.yjfshop123.live.server.widget.CircleImageView
            android:id="@+id/setAutor"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/autor_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:text="@string/set_touxiang"
            android:textColor="@color/color_title_txt"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_f5f5f5_20_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/nickNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/wszl_nickname"
                android:textColor="@color/color_333333"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/nickNameTxt"
                android:background="@null"
                android:hint="@string/wszl_hint_nickname"
                android:maxLength="6"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="#000000"
                android:textColorHint="#9f9f9f"
                android:textCursorDrawable="@drawable/edittext_color"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ageLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_f5f5f5_20_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ageTxtTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/wszl_age"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/ageTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ageTxtTag"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/wszl_hint_age"
                android:text=""
                android:textColor="#000000"
                android:textColorHint="#9f9f9f"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:src="@drawable/myself_right_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/cityLayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_f5f5f5_20_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cityTxtTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="@string/wszl_city"
                android:textColor="@color/color_333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/cityTxt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@+id/cityTxtTag"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/wszl_hint_city"
                android:textColor="#000000"
                android:textColorHint="#9f9f9f"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="21dp"
                android:src="@drawable/myself_right_icon" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/checkMan"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/selector_sex_man_button"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkMan"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/wszl_man"
                    android:textColor="@color/color_title_txt"
                    android:textSize="13sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="99dp">

                <RadioButton
                    android:id="@+id/checkGirl"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:background="@drawable/selector_sex_girl_button"
                    android:button="@null" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkGirl"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="@string/wszl_girl"
                    android:textColor="@color/color_title_txt"
                    android:textSize="13sp" />

            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/registNow"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="42dp"
            android:background="@drawable/shape_f9e3c2_button"
            android:stateListAnimator="@null"
            android:text="@string/wszl_register"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wszl_desc"
            android:textColor="@color/color_content_txt"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/yonghuxieyi"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/wszl_xieyi"
            android:textColor="@color/color_style"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="》《"
            android:textColor="@color/color_content_txt"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/yinsizhengce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/yingsi"
            android:textColor="@color/color_style"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="》"
            android:textColor="@color/color_content_txt"
            android:textSize="12sp" />

    </LinearLayout>

</FrameLayout>