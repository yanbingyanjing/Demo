<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yjfshop123.live.server.widget.SelectableRoundedImageView
            android:id="@+id/recommended_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="4dip"
            app:sriv_left_top_corner_radius="4dip"
            app:sriv_right_bottom_corner_radius="4dip"
            app:sriv_right_top_corner_radius="4dip" />

        <LinearLayout
            android:id="@+id/recommended_item_state_ll"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/_corners_shape"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:visibility="gone">

            <Button
                android:id="@+id/recommended_item_state_btn"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/_point_" />

            <TextView
                android:id="@+id/recommended_item_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="12dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="28dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recommended_item_nickname_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/recommended_item_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:background="@drawable/_mm_details_01"
                android:drawableLeft="@drawable/male_icon"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text=" 12"
                android:textColor="@color/white"
                android:textSize="9dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/recommended_item_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="10dp"
            android:lines="1"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <!--<LinearLayout
            android:layout_width="wrap_content"
