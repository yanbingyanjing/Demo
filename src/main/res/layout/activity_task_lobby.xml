<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <View
        android:id="@+id/atl_vp_view"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/color_theme" />

    <FrameLayout
        android:id="@+id/atl_vp_fl"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="@color/color_theme">

        <ImageView
            android:id="@+id/atl_back"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_btn_back"
            android:scaleType="center"
            android:src="@drawable/head_back" />

        <com.jpeng.jptabbar.PagerSlidingTabStrip
            android:id="@+id/atl_nts_sty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:textColor="@color/color_666666"
            android:textSize="14sp"
            app:pstsDividerColor="@android:color/transparent"
            app:pstsIndicatorColor="@color/color_style"
            app:pstsIndicatorHeight="2dp"
            app:pstsScaleZoomMax="0.1"
            app:pstsShouldExpand="false"
            app:pstsTabPaddingLeftRight="16dp"
            app:pstsTextSelectedColor="@color/color_000000"
            app:pstsUnderlineColor="@android:color/transparent" />

        <ImageView
            android:id="@+id/ql_rw_add_iv"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:layout_gravity="center_vertical|right"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/add_video_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:background="@color/line_color" />
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/atl_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>