<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"

    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="50dp"
        android:textStyle="bold"
        android:text="@string/login"
        android:textColor="@color/white"
        android:textSize="26sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_login_new_ui"
            android:orientation="vertical"
            android:paddingTop="50dp"
            android:paddingBottom="85dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_edit_f8f5f1"

                android:minHeight="52dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/country"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:text="+86"
                    android:gravity="center"
                    android:drawableRight="@drawable/svg_pull_down_black"
                    android:textColor="@color/color_514C48"
                    android:textColorHint="@color/color_BAB8B6"
                    android:textSize="14sp" />

                <com.yjfshop123.live.server.widget.ClearWriteEditText
                    android:id="@+id/de_login_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_edit_f8f5f1"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_inputPhone"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:paddingStart="10dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/color_514C48"
                    android:textColorHint="@color/color_BAB8B6"
                    android:textCursorDrawable="@drawable/edittext_color"
                    android:textSize="14dp" />

            </LinearLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_edit_f8f5f1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp">


                <com.yjfshop123.live.server.widget.ClearWriteEditText
                    android:id="@+id/de_login_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="100dp"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_validate"
                    android:maxLines="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:textColor="@color/color_514C48"
                    android:textColorHint="@color/color_BAB8B6"
                    android:textCursorDrawable="@drawable/edittext_color"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/sendCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@null"
                    android:text="@string/send_validate"
                    android:textColor="@color/color_A98344"
                    android:textSize="14sp" />
            </FrameLayout>
            <LinearLayout
                android:id="@+id/cityLayout"
                android:background="@drawable/bg_edit_f8f5f1"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp">
                <TextView
                    android:id="@+id/cityTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:hint="@string/persional_city"

                    android:textColor="@color/color_514C48"
                    android:textColorHint="@color/color_BAB8B6" />

                <ImageView
                    android:id="@+id/rightImg5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"

                    android:src="@mipmap/right" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/invite_code_fl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="85dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="33.5dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="center"
                    android:src="@drawable/password_p"
                    android:tint="@color/color_title_txt" />

                <com.yjfshop123.live.server.widget.ClearWriteEditText
                    android:id="@+id/de_register_invite"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="36dp"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_vertical"
                    android:hint="@string/hint_input_invite"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/color_title_txt"
                    android:textColorHint="@color/color_content_txt"
                    android:textCursorDrawable="@drawable/edittext_color"
                    android:textSize="14dp" />


            </FrameLayout>

            <LinearLayout
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="41dp"
                android:layout_marginRight="30dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/color_4DAFA89E" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginStart="15dp"

                    android:src="@mipmap/phone_register_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_register"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/color_4C4C4C"
                    android:textSize="12sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="14dp"
                    android:layout_weight="1"
                    android:background="@color/color_4DAFA89E" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/login_logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="33dp"
            android:background="@drawable/bg_new_ui_btn_100corner"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/de_login_sign"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerInParent="true"
                android:background="@null"
                android:stateListAnimator="@null"
                android:text="@string/Login"
                android:textColor="@color/white"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="28dp"
                android:src="@mipmap/white_right" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>
</ScrollView>