    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="@string/online_fankui"
            android:textColor="@color/white"
            android:textSize="16sp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/bg_edit_new_ui"
            android:paddingStart="12dp"
            android:paddingTop="16dp"
            android:paddingEnd="12dp"
            android:paddingBottom="18dp">

            <com.yjfshop123.live.ui.widget.MyEditText
                android:id="@+id/yiJian"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top"
                android:hint="@string/hint_feedback"
                android:lineSpacingMultiplier="1.2"
                android:maxLines="10"
                android:textColor="@color/white"
                android:textColorHint="@color/color_80CECECD"
                android:textCursorDrawable="@drawable/edittext_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/currentTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="@string/unsealing_input"
                android:textColor="@color/color_content_txt"
                android:textSize="14sp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/submitBtn"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_new_ui_btn"
            android:stateListAnimator="@null"
            android:text="@string/online_tijiao"
            android:layout_marginBottom="30dp"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />
