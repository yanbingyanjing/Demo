<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
        android:id="@+id/sv_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.jpeng.jptabbar.PagerSlidingTabStrip
        android:id="@+id/sv_nts_sty"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:textColor="#c5c5c5"
        android:textSize="16dp"
        app:pstsDividerColor="@android:color/transparent"
        app:pstsIndicatorColor="#fbfbfc"
        app:pstsIndicatorHeight="1dp"
        app:pstsScaleZoomMax="0"
        app:pstsShouldExpand="true"
        app:pstsTabPaddingLeftRight="14dp"
        app:pstsTextSelectedColor="#fbfbfc"
        app:pstsUnderlineColor="@android:color/transparent" />

    <ImageView
        android:id="@+id/h_video_search"
        android:layout_width="30dip"
        android:layout_height="30dip"
        android:layout_gravity="right"
        android:layout_marginTop="22dp"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/conversation_search"
        android:tint="@color/color_title_txt" />

</FrameLayout>