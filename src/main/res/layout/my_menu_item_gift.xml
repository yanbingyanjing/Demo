    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp">

        <ImageButton
            style="@style/ChatInputIcon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:clickable="false"
            android:src="@drawable/personalhomepage_icon_gift"
            android:tint="@color/color_style" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="5dp"
            android:text="@string/gift_2"
            android:textColor="@color/color_content_txt"
            android:textSize="10dp" />
    </FrameLayout>

</cn.jiguang.imui.chatinput.menu.view.MenuItem>