<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/popupwindow_game_bg"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:id="@+id/popupwindow_game_iv_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_game_wallet" />

        <ImageView
            android:id="@+id/popupwindow_game_iv_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_game_home" />

        <ImageView
            android:id="@+id/popupwindow_game_iv_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_game_refresh" />
    </LinearLayout>


</LinearLayout>