<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_voice_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/service_dialog_top_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voice_chat"
            android:textColor="@color/color_title_txt"
            android:textSize="16dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dialog_video_ll"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linerlayout_water_sel"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_chat"
            android:textColor="@color/color_title_txt"
            android:textSize="16dp" />
    </LinearLayout>


</LinearLayout>