<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFDF8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_graditent_fdf7f1_fef3d5"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/layout_head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:onClick="onHeadLeftButtonClick"
                android:scaleType="center"

                android:src="@mipmap/black_back" />

            <TextView
                android:id="@+id/tv_title_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:maxLength="20"
                android:maxLines="1"
                android:text="@string/xuanze_pay_type_title"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/zhifubao_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:orientation="horizontal"
        android:paddingTop="11dp"
        android:paddingBottom="11dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/zhifubao" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/tixian_ali"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/alipay_zanbuzhichi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂不支持"
            android:textColor="@color/color_ACAAA7"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/zhifubao_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/yellow_gou"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/color_1A000000" />

    <LinearLayout
        android:id="@+id/weixin_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="18dp"
        android:orientation="horizontal"
        android:paddingTop="11dp"
        android:paddingBottom="11dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/weixin" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/setting_wx"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/weichat_zanbuzhichi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂不支持"
            android:textColor="@color/color_ACAAA7"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/weixin_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/yellow_gou"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/color_1A000000" />

    <LinearLayout
        android:id="@+id/bank_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="18dp"
        android:orientation="horizontal"
        android:paddingTop="11dp"
        android:paddingBottom="11dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/hongse_bank" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="@string/yinhangka"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/bank_zanbuzhichi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂不支持"
            android:textColor="@color/color_ACAAA7"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/bank_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/yellow_gou" />
    </LinearLayout>
    <View
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        android:background="@color/color_1A000000" />
    <LinearLayout
        android:id="@+id/usdt_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="18dp"
        android:orientation="horizontal"
        android:paddingTop="11dp"
        android:paddingBottom="11dp">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/usdt" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:text="USDT(ERC20)"
            android:textColor="@color/color_333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/usdt_zanbuzhichi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="暂不支持"
            android:textColor="@color/color_ACAAA7"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/usdt_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:visibility="gone"
            android:src="@mipmap/yellow_gou" />
    </LinearLayout>
</LinearLayout>