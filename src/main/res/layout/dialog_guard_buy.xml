<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:text="@string/guard_choose_duration"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="30dp">

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/btn_1"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_guard_btn_1"
                android:button="@null"
                android:checked="true"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/fg_btn_buy_guard"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/btn_2"
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_guard_btn_1"
                android:button="@null"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/fg_btn_buy_guard"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/btn_3"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bg_guard_btn_2"
                android:button="@null"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textColor="@color/color_style"
                android:textSize="12sp" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="3dp">

            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="wrap_content">

                <com.yjfshop123.live.live.live.common.widget.gift.view.DrawableTextView
                    android:id="@+id/price_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:textColor="@color/color_style"
                    android:textSize="12sp"
                    app:dt_left_drawable="@mipmap/icon_live_gift_zs"
                    app:dt_left_height="12dp"
                    app:dt_left_width="12dp" />

            </FrameLayout>


            <FrameLayout
                android:layout_width="76dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <com.yjfshop123.live.live.live.common.widget.gift.view.DrawableTextView
                    android:id="@+id/price_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:textColor="@color/color_style"
                    android:textSize="12sp"
                    app:dt_left_drawable="@mipmap/icon_live_gift_zs"
                    app:dt_left_height="12dp"
                    app:dt_left_width="12dp" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <com.yjfshop123.live.live.live.common.widget.gift.view.DrawableTextView
                    android:id="@+id/price_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawablePadding="3dp"
                    android:textColor="@color/color_style"
                    android:textSize="12sp"
                    app:dt_left_drawable="@mipmap/icon_live_gift_zs"
                    app:dt_left_height="12dp"
                    app:dt_left_width="12dp" />

            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/guard_right"
        android:textColor="@color/textColor"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:src="@mipmap/icon_guard_type_0" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/icon"
            android:text="@string/guard_1"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_toRightOf="@id/icon"
            android:text="@string/guard_2"
            android:textColor="@color/textColor"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/icon_1"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:src="@mipmap/icon_guard_l_0" />

        <TextView
            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/icon_1"
            android:text="@string/guard_3"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_1"
            android:layout_toRightOf="@id/icon_1"
            android:text="@string/guard_4"
            android:textColor="@color/textColor"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/icon_2"
            android:layout_width="44dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:padding="3dp"
            android:src="@mipmap/icon_guard_l_1" />

        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/icon_2"
            android:text="@string/guard_5"
            android:textColor="@color/gray3"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/content_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_2"
            android:layout_toRightOf="@id/icon_2"
            android:text="@string/guard_6"
            android:textColor="@color/gray3"
            android:textSize="12sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/coin_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/textColor"
            android:textSize="14sp" />

        <com.yjfshop123.live.live.live.common.widget.gift.view.DrawableTextView
            android:id="@+id/coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/coin_name"
            android:drawablePadding="4dp"
            android:textColor="@color/color_style"
            android:textSize="16sp"
            app:dt_left_drawable="@mipmap/icon_live_gift_zs"
            app:dt_left_height="14dp"
            app:dt_left_width="14dp"
            app:dt_right_drawable="@mipmap/icon_arrow_right_3"
            app:dt_right_height="14dp"
            app:dt_right_width="14dp" />

        <TextView
            android:id="@+id/btn_buy"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_guard_btn_buy"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/guard_buy"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>