<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_my"
    android:orientation="vertical">

    <com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="16dp"


                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/target_reward_ll"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:background="@drawable/target_reward_bg"
                        android:orientation="vertical"
                        android:paddingStart="28dp"
                        android:paddingTop="24dp"
                        android:paddingEnd="28dp"
                        android:paddingBottom="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:src="@mipmap/activity_log" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/current_team_activity"
                                android:textColor="@color/color_302011"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/team_activity_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:textColor="@color/color_302011"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/need_activity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:background="@mipmap/bottom_pao"
                            android:paddingStart="15dp"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:text="@string/target_bottom_pao"
                            android:textColor="@color/color_302011"
                            android:textSize="14sp" />


                        <com.yjfshop123.live.ui.widget.TargetProgressView
                            android:id="@+id/npb"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="13dp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="14dp"
                                android:src="@mipmap/target_tips" />

                            <TextView
                                android:id="@+id/chaju"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="@string/chaju"
                                android:textColor="@color/color_8F302011"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/recive_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="22dp"
                            android:background="@drawable/recive_select"
                            android:enabled="false"
                            android:paddingStart="67dp"
                            android:paddingTop="6dp"
                            android:paddingEnd="67dp"
                            android:paddingBottom="6dp"
                            android:text="@string/receive_reward"
                            android:textColor="@color/color_302011"
                            android:textSize="16sp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/reward_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/target_name_bg"
                        android:paddingStart="14dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="14dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:visibility="visible"

                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-18dp"
                        android:background="@mipmap/target_bg_bottom"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="visible"

                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="14dp"
                                android:src="@mipmap/target_left" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginStart="12dp"
                                android:layout_marginEnd="12dp"
                                android:text="@string/today_target_reward"
                                android:textColor="@color/color_3B3026"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="14dp"
                                android:src="@mipmap/target_right" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:layout_marginTop="19dp"
                            android:visibility="visible"
                            android:text="@string/dachweng"
                            android:textColor="@color/color_A63B3026"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/reward_icon"
                            android:layout_width="match_parent"
                            android:layout_height="146dp"
                            android:layout_gravity="center_horizontal"
                            android:visibility="gone"
                            android:layout_marginStart="18dp"
                            android:layout_marginTop="37dp"
                            android:layout_marginEnd="18dp"
                            android:scaleType="fitXY" />
                    </LinearLayout>


                </LinearLayout>

                <include layout="@layout/layout_common_empty" />

            </FrameLayout>
        </ScrollView>
    </com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout>


</LinearLayout>