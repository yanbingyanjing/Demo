<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@drawable/service_dialog_top_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_bulge_bg"
        android:orientation="horizontal"
        android:paddingBottom="20dp">
        <TextView
            android:id="@+id/btn_share_kouling"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTint="@color/color_999999"
            android:drawableTop="@drawable/lianmai_caise"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="口令分享"
            android:textColor="@color/color_title_txt"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/btn_share_wx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/icon_share_wx"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/color_title_txt"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_share_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/icon_share_circle"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/color_title_txt"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_share_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:visibility="gone"
            android:drawableTop="@drawable/icon_share_qq"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="QQ"
            android:textColor="@color/color_title_txt"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_share_qzone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/icon_share_qzone"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:visibility="gone"
            android:text="QQ空间"
            android:textColor="@color/color_title_txt"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/btn_share_wb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableTop="@drawable/icon_share_wb"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="微博"
            android:textColor="@color/color_title_txt"
            android:textSize="14dp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/line_color" />

    <Button
        android:id="@+id/btn_share_cancle"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/linerlayout_water_sel"
        android:text="@string/cancel"
        android:textColor="@color/color_title_txt"
        android:textSize="16dp" />

</LinearLayout>