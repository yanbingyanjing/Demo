<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:tint="@color/color_title_txt"
                android:src="@drawable/head_back" />

            <TextView
                android:id="@+id/titleContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_title_txt"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/moreOption"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:scaleType="center"
                android:tint="@color/color_title_txt"
                android:src="@drawable/ic_room_music_item_more" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/line_color" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.yjfshop123.live.server.widget.CircleImageView
                    android:id="@+id/userHeadImg"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp" />

                <LinearLayout
                    android:id="@+id/userLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/userHeadImg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/userLay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/userHeadName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text=""
                            android:textColor="@color/color_title_txt"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/communitySex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:src="@mipmap/boy" />

                        <ImageView
                            android:id="@+id/communityDaren"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:src="@mipmap/da" />

                        <ImageView
                            android:id="@+id/communityVip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:src="@drawable/community_vip" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/contextText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userLayout"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="29dp"
                    android:layout_toRightOf="@+id/userHeadImg"
                    android:lineSpacingExtra="1.2dp"
                    android:text=""
                    android:textColor="@color/color_content_txt"
                    android:textSize="12sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp">

                <TextView
                    android:id="@+id/publishTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contentLayout"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="57dp"
                    android:text=""
                    android:textColor="@color/color_content_txt"
                    android:textSize="11sp" />

                <RelativeLayout
                    android:id="@+id/zanLayout"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contentLayout"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/zanTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|center_vertical"
                        android:text="0"
                        android:textColor="@color/color_content_txt"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/zanImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/zanTxt"
                        android:src="@drawable/community_item_icon_6" />

                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/contentTxt"
                android:layout_marginLeft="57dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="29dp">

                <RelativeLayout
                    android:id="@+id/huifuLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="50dp"
                    android:visibility="visible">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/shimmer_recycler_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_left_line_e9e9e9e9_layout"

                         />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/noDataLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/nodataImg"
                        android:layout_width="160dp"
                        android:layout_height="78dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/nodate" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nodataImg"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:text="一楼的心情你不懂"
                        android:textColor="@color/color_content_txt"
                        android:textSize="12dp" />

                </RelativeLayout>

            </RelativeLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/color_theme"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <!-- 输入框输入信息 -->
        <RelativeLayout
            android:id="@+id/optionLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="105dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/shape_f5f5f5_20_button_input"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/huifuEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center|left"
                    android:layout_weight="2"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="回复楼主～"
                    android:paddingLeft="15dp"
                    android:textColor="@color/color_title_txt"
                    android:textColorHint="@color/color_content_txt"
                    android:textCursorDrawable="@drawable/edittext_color"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/biaoqingImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center"
                    android:layout_weight="0.1"
                    android:scaleType="center"
                    android:src="@drawable/forum_create_post_send_smiley_g3_ic" />


            </LinearLayout>

            <TextView
                android:id="@+id/sendMessage"
                android:layout_width="55dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_a5a5a5_20_button"
                android:gravity="center"
                android:text="@string/rc_picsel_toolbar_send"
                android:textColor="@color/color_ffffff"
                android:textSize="13sp" />

        </RelativeLayout>

        <cn.jiguang.imui.chatinput.emoji.EmojiView
            android:id="@+id/aurora_rl_emoji_container"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="bottom"
            android:visibility="gone" />

    </LinearLayout>

    <include layout="@layout/layout_common_empty" />

</FrameLayout>