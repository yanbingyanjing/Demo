<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_FFFDF8"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_graditent_fdf7f1_fef3d5"
        android:orientation="vertical">

        <View
            android:id="@+id/status_bar_view"
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/layout_head"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_left"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:layout_gravity="center_vertical"
                android:onClick="onHeadLeftButtonClick"
                android:scaleType="center"

                android:src="@mipmap/black_back" />
            <TextView
                android:id="@+id/tv_title_center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:maxLength="20"
                android:maxLines="1"
                android:text="@string/yinhangka"
                android:textColor="@color/color_333333"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="19dp"
                android:layout_marginEnd="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dengdai_pay"
                    android:textColor="@color/color_333333"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/color_ACAAA7"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_graditent_fae2ae_b28d51_top_8"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="14dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/order_jine"
                    android:textColor="@color/color_FAF5EA"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="0 CNY"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bank_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_graditent_fdf7f1_fef3d5_bottom_8"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shoukanren"
                        android:textColor="@color/color_B7B2A6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/shoukuanren"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/name_copy"
                        android:layout_width="14dp"
                        android:layout_marginStart="3dp"

                        android:src="@mipmap/copy_msg"
                        android:layout_height="14dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_0A000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaihu_bank"
                        android:textColor="@color/color_B7B2A6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/bank_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/bank_name_copy"
                        android:layout_width="14dp"
                        android:src="@mipmap/copy_msg"
                        android:layout_marginStart="3dp"
                        android:layout_height="14dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_0A000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/kaihu_zhihang"
                        android:textColor="@color/color_B7B2A6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/bank_create_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/bank_create_name_copy"
                        android:layout_width="14dp"
                        android:src="@mipmap/copy_msg"
                        android:layout_marginStart="3dp"
                        android:layout_height="14dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_0A000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bank_id"
                        android:textColor="@color/color_B7B2A6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/bank_account"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/bank_account_copy"
                        android:layout_width="14dp"
                        android:src="@mipmap/copy_msg"
                        android:layout_marginStart="3dp"
                        android:layout_height="14dp"/>
                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:id="@+id/other_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:visibility="gone"
                android:background="@drawable/bg_graditent_fdf7f1_fef3d5_bottom_8"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                android:paddingBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shoukanren"
                        android:textColor="@color/color_B7B2A6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/shoukuanren_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/name_other_copy"
                        android:layout_width="14dp"
                        android:layout_marginStart="3dp"

                        android:src="@mipmap/copy_msg"
                        android:layout_height="14dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_0A000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shoukuan_account"
                        android:textColor="@color/color_B7B2A6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/shoukuan_account_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"

                        android:textColor="@color/color_333333"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/shoukuan_account_other_copy"
                        android:layout_width="14dp"
                        android:src="@mipmap/copy_msg"
                        android:layout_marginStart="3dp"
                        android:layout_height="14dp"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/color_0A000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/shoukuan_erweima"
                        android:textColor="@color/color_B7B2A6"
                        android:textSize="14sp" />


                    <ImageView
                        android:id="@+id/erweima"
                        android:layout_width="30dp"
                        android:src="@mipmap/erweima"
                        android:layout_marginStart="3dp"
                        android:layout_height="30dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:id="@+id/select_fukuan"
                android:visibility="gone"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="18dp"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/please_up_fukuanpingzheng"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/pay_btn"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="11dp"

                    android:layout_weight="1"
                    android:background="@drawable/bg_gradient_fae2ae_b28d51_24"
                    android:gravity="center"

                    android:text="@string/woyi_fukuan"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>