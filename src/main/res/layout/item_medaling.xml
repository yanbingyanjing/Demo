<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/bg_gold_egg_item"
    android:orientation="vertical"
    android:padding="10dp"

    android:paddingStart="16dp"
    android:paddingTop="18dp"
    android:paddingEnd="18dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/xuanpin"
                android:textColor="@color/color_D2B994"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/medal_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textColor="@color/color_CEAF82" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:text="@string/geshu"
                android:textColor="@color/color_D2B994"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/medal_need_egg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textColor="@color/color_CEAF82"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:text="@string/zhouqi"
                android:textColor="@color/color_D2B994"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/medal_total_release_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textColor="@color/color_CEAF82" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yijingxing"
                android:textColor="@color/color_D2B994"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/medal_released_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:fontFamily="@string/font_fontFamily_medium"
                android:textColor="@color/color_CEAF82"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/de_notification_start_title"
            android:textSize="12sp"
            android:textColor="@color/color_D2B994" />

        <TextView
            android:id="@+id/start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="12sp"

            android:textColor="@color/color_D2B994" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bug_time"
            android:textSize="12sp"
            android:textColor="@color/color_D2B994" />

        <TextView
            android:id="@+id/create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textSize="12sp"

            android:textColor="@color/color_D2B994" />

    </LinearLayout>

</LinearLayout>
