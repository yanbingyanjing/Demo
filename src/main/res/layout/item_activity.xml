<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:layout_marginBottom="14dp"


  >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/one"
        android:layout_alignTop="@+id/one"
        android:layout_alignEnd="@+id/one"
        android:layout_alignBottom="@+id/one"
        android:scaleType="fitXY"
        android:src="@mipmap/kuangkuang" />

    <LinearLayout
        android:id="@+id/one"
        android:paddingStart="12dp"
        android:paddingTop="10dp"
        android:paddingEnd="15dp"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:textColor="@color/color_99664C"
            android:textSize="14sp" />
        <!--    bg_graditent_ff907c_fe5746_15-->
        <TextView
            android:id="@+id/canyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_red_color_20"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingEnd="10dp"
            android:paddingBottom="4dp"
            android:text="立即参与"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>
    <!--    <ImageView-->
    <!--        android:id="@+id/canyu"-->
    <!--        android:layout_width="64dp"-->
    <!--        android:layout_height="24dp"-->
    <!--        android:scaleType="fitXY"-->
    <!--     android:src="@mipmap/lijicanyu"/>-->
</RelativeLayout>