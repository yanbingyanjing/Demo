            </LinearLayout>

            <ImageView
                android:id="@+id/egg_6_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xuanze_gou"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egg_7_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"

                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_7"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_7_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/egg_7_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xuanze_gou"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egg_8_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"

                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_8"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_8_count"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/egg_8_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xuanze_gou"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/exchange"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_selector_exchange"
        android:gravity="center"
        android:text="@string/duihuanJindan"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duihuanquan"
            android:textColor="@color/ff666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quan_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="张"
            android:textColor="@color/ff666666"
            android:textSize="12sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/today_left_count"
            android:textColor="@color/ff666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shengyu_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="兑换说明："
        android:textColor="@color/ff666666"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/shuoming"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:scrollbars="none"
        android:layout_marginTop="4dp"
        android:textColor="@color/color_999999"
        android:textSize="10sp" />
</LinearLayout>