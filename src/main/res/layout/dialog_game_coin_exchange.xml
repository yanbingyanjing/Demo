<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_12"
    android:orientation="vertical"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/duihuanJindan"
            android:textColor="@color/color_333333"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@mipmap/guanbi_xx" />
    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bg_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/egg_1_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"

                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_1"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_1_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/egg_1_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:visibility="gone"
                android:src="@mipmap/xuanze_gou"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egg_2_LL"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_2"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_2_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/egg_2_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xuanze_gou"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egg_3_LL"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_3"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_3_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/egg_3_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xuanze_gou"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egg_4_LL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"

                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_4"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_4_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/egg_4_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xuanze_gou"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/egg_5_LL"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"

                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_5"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_5_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/egg_5_count_gou"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY"
                android:src="@mipmap/xuanze_gou"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/egg_6_LL"
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/bg_exchangecoin_selector">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:orientation="vertical"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp">

                <ImageView
                    android:id="@+id/egg_6"
                    android:layout_width="35dp"
                    android:layout_height="39dp" />

                <TextView
                    android:id="@+id/egg_6_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
