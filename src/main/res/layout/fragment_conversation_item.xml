<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_FFFDF8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="12dp">

        <com.yjfshop123.live.server.widget.SelectableRoundedImageView
            android:id="@+id/c_it_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            app:sriv_oval="true" />

        <ImageView
            android:id="@+id/c_it_vip_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/icon_vip"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/c_it_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/color_404040"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/c_it_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textColor="@color/color_BABABA"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/c_it_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_BABABA"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/c_it_unread_num"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:background="@drawable/bg_gradient_ff6b67_f05971_round"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:text="1"
                android:visibility="invisible" />
        </LinearLayout>

    </RelativeLayout>

   <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
       android:layout_marginStart="12dp"
       android:layout_marginEnd="12dp"
        android:background="@color/color_F6F6F6" />
</LinearLayout>