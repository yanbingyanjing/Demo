<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0B0A08"
    android:orientation="vertical">

    <include
        layout="@layout/xchat_header"
        android:visibility="gone" />


    <ScrollView
        android:layout_width="match_parent"


        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="26dp"
            android:paddingEnd="26dp">

            <com.yjfshop123.live.server.widget.CircleImageView
                android:id="@+id/headerImgLayout"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:clickable="false"
                android:src="@drawable/autor_img" />


            <LinearLayout
                android:id="@+id/nickNameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-medium"
                    android:text="@string/persional_my_nick"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:maxLength="15"
                    android:text="张三丰"
                    android:textColor="@color/color_CECECD"

                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_fffff" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingTop="23dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/persional_sex"
                    android:textColor="@color/white"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/sexTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="男"
                    android:textColor="@color/color_CECECD"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/rightImg3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"

                    android:src="@mipmap/right" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_fffff" />

            <LinearLayout
                android:id="@+id/cityLayout"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="23dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/persional_city"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/cityTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/color_CECECD"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/rightImg5"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/right"
                    android:visibility="invisible" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_fffff" />

            <LinearLayout
                android:id="@+id/ageLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="23dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"

                    android:text="@string/wszl_age"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/ageTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"

                    android:text="28"
                    android:textColor="@color/color_CECECD"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/rightImg4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_fffff" />

            <LinearLayout
                android:id="@+id/myTagLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="23dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/txt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-medium"
                    android:text="@string/persional_my_tag"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tagsTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:text="add,dd,dd"
                    android:textColor="@color/color_CECECD"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/rightImg8"

                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_fffff" />

            <LinearLayout
                android:id="@+id/voiceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="23dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/x_voice_introduced"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/speechIntroduction"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:text="@string/persional_jieshao_desc"
                    android:textColor="@color/color_CECECD"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/rightImg6"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/right" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line_color_fffff" />

            <LinearLayout
                android:id="@+id/signatureLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="23dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/txt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="@string/x_signature"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/signatureTxt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:text="@string/persional_desc"
                    android:textColor="@color/color_CECECD"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/rightImg7"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@mipmap/right" />

            </LinearLayout>

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="36dp"
                android:background="@drawable/shape_ffffff_20_button"
                android:text="@string/de_save"
                android:textColor="#1CBCFF"
                android:textSize="17sp"
                android:visibility="gone" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
