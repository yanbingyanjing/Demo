<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/service_dialog_top_bg">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_gift_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_title_txt"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/dialog_gift_recharge"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/jb_hint_9"
                android:textColor="@color/color_style"
                android:textSize="12dp" />
        </LinearLayout>
    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/dialog_gift_viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_theme" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/color_theme">

        <LinearLayout
            android:id="@+id/gift_indicator_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"/>

        <TextView
            android:id="@+id/dialog_gift_send"
            android:layout_width="64dp"
            android:layout_height="28dp"
            android:layout_gravity="right|center"
            android:layout_marginRight="10dp"
            android:background="@drawable/_mm_details_1"
            android:gravity="center"
            android:text="@string/rc_picsel_toolbar_send"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </FrameLayout>

</LinearLayout>