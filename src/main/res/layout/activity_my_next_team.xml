<?xml version="1.0" encoding="utf-8"?>
<com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_refresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0B0A08">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="18dp"
        android:paddingTop="12dp"
     >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="18dp"

            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="@string/fenzhi"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="18dp"

            android:background="@drawable/bg_gradient_fdf7f1_fee8d5_9"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="18dp"
                android:paddingEnd="16dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/hero_huoyue"
                            android:textColor="@color/color_9F8359"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/hero_activity"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingStart="3dp"
                            android:textColor="@color/color_735541"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/color_D7C1A3" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"

                        android:gravity="center_vertical"

                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="@string/total_team_activity_num"
                            android:textColor="@color/color_9F8359"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/team_activity_num"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_weight="1"

                            android:textColor="@color/color_735541"
                            android:textSize="14sp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:background="@color/color_D7C1A3" />

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="17dp"
                    android:layout_weight="1.1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/lianmeng_huoyue"
                            android:textColor="@color/color_9F8359"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/league_activity"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingStart="3dp"
                            android:textColor="@color/color_735541"
                            android:textSize="14sp" />
                        <ImageView
                            android:id="@+id/up"
                            android:layout_width="15dp"
                            android:layout_height="20dp"

                            />

                        <TextView
                            android:id="@+id/team_max_medaling"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:textColor="@color/color_CEAF82"
                            android:textSize="14sp"

                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp"

                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tuijianren"
                            android:textColor="@color/color_9F8359"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tuijian"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="3dp"
                            android:layout_weight="1"
                            android:textColor="@color/color_735541"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/mm_details_controls_add"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:background="@drawable/shape_cc000000_20_button"
                            android:gravity="center"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"

                            android:text="关注"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="14dp"

                android:background="@color/color_D7C1A3"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"

                android:layout_gravity="center_horizontal"
                android:drawableLeft="@mipmap/tips_new"
                android:text="@string/lianmeng_taixiao_jiangji"
                android:textColor="@color/color_9F8359"
                android:layout_marginBottom="7dp"
                android:textSize="10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_ceaf82_2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:fontFamily="@string/font_fontFamily_medium"
                android:text="他的分店"
                android:textColor="@color/color_CEAF82"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/my_promotion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="2dp"
                android:textColor="@color/color_CEAF82"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/team_people_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:background="@drawable/bg_graditent_fae2ae_b28d51_left_21"
                android:paddingStart="14dp"
                android:paddingTop="8dp"
                android:paddingEnd="10dp"
                android:paddingBottom="8dp"
                android:text="分店总人数："
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginEnd="18dp"

            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="20dp" />


            <include layout="@layout/layout_common_empty" />
        </FrameLayout>
    </LinearLayout>
    <!--        <include-->
    <!--            layout="@layout/layout_common_empty"-->
    <!--            />-->


</com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout>