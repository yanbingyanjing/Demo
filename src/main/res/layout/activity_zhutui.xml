<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0B0A08"
    android:orientation="vertical">

    <com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/heijin"

        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:orientation="vertical"
                android:paddingTop="39dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gold_egg_item"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingTop="22dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_fontFamily_medium"
                        android:text="@string/zhutui_tips"
                        android:textColor="@color/color_CEAF82"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"

                            android:layout_weight="1"
                            android:fontFamily="@string/font_fontFamily_medium"
                            android:text="@string/zhutui_tips_two"
                            android:textColor="@color/color_D2B994"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/reward_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_marginTop="19dp"
                            android:background="@drawable/target_name_bg"
                            android:paddingStart="35dp"
                            android:paddingTop="11dp"
                            android:paddingEnd="35dp"
                            android:paddingBottom="11dp"
                            android:text="@string/receive_reward"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:visibility="gone"
                    android:layout_marginTop="21dp"
                    android:background="@drawable/bg_zhutui_two"
                    android:padding="16dp"
                    android:text="@string/zhutui_detail"

                    android:textColor="@color/color_CCFFFFFF"
                    android:textSize="14sp" />

            </LinearLayout>
        </ScrollView>
    </com.yjfshop123.live.ui.widget.shimmer.VerticalSwipeRefreshLayout>


</LinearLayout>