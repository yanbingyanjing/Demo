<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_theme">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/me_b_view"
        android:fitsSystemWindows="false">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/mm_abl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/transparent"
            android:orientation="vertical"
            app:contentScrim="@android:color/transparent"
            app:elevation="0dp">

            <android.support.design.widget.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:expandedTitleMarginStart="60dp"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_collapseMode="parallax">

                    <com.youth.banner.Banner
                        android:id="@+id/mm_details_banner"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:image_scale_type="center_crop"
                        app:indicator_drawable_selected="@color/red_x"
                        app:indicator_drawable_unselected="@color/white"
                        app:indicator_height="4dp"
                        app:indicator_margin="4dp"
                        app:indicator_width="4dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:layout_marginTop="200dp"
                        android:background="@color/color_theme"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mm_details_nickname_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/mm_details_daren_status"
                                android:layout_width="16.5dp"
                                android:layout_height="14dp"
                                android:layout_marginLeft="5dp"
                                android:src="@drawable/mm_details_zb_icon" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/mm_details_id_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/mm_details_desc_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="8dp"
                            android:lines="1"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mm_details_location_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/video_me_sel"
                                android:drawableLeft="@drawable/location_icon"
                                android:drawablePadding="2dp"
                                android:drawableTint="@color/color_999999"
                                android:gravity="center"
                                android:paddingLeft="4dp"
                                android:paddingTop="1dp"
                                android:paddingRight="4dp"
                                android:paddingBottom="1dp"
                                android:text=""
                                android:textColor="@color/color_999999"
                                android:textSize="9dp" />

                            <TextView
                                android:id="@+id/mm_details_age_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/video_me_sel"
                                android:drawableLeft="@drawable/male_icon"
                                android:drawablePadding="2dp"
                                android:drawableTint="@color/color_999999"
                                android:gravity="center"
                                android:paddingLeft="4dp"
                                android:paddingTop="1dp"
                                android:paddingRight="4dp"
                                android:paddingBottom="1dp"
                                android:text=""
                                android:textColor="@color/color_999999"
                                android:textSize="9dp" />

                            <TextView
                                android:id="@+id/mm_details_vip_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:text=""
                                android:textColor="@color/color_999999"
                                android:textSize="10dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/mm_details_like_num"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="xx"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/mm_details_follow_num"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="xx"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:visibility="visible" />

                            <TextView
                                android:id="@+id/mm_details_fans_num"
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:text="xx"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/mm_details_controls_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="220dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/icon_focus_2"
                        android:gravity="center"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="12sp" />

                </FrameLayout>

                <android.support.v7.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:layout_collapseMode="pin" />

                <com.yjfshop123.live.server.widget.CircleImageView
                    android:id="@+id/mm_details_civ"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="185dp"
                    android:scaleType="centerCrop"
                    app:civ_border_color="@color/white"
                    app:civ_border_width="1dp"
                    app:layout_collapseMode="parallax" />

            </android.support.design.widget.CollapsingToolbarLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="15dp"
                        android:background="@drawable/shape_1b2031_20_t" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="15dp"
                        android:background="@color/color_theme" />

                    <com.jpeng.jptabbar.PagerSlidingTabStrip
                        android:id="@+id/mm_psts"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:textColor="@color/transparent"
                        android:textSize="14sp"
                        app:pstsDividerColor="@android:color/transparent"
                        app:pstsIndicatorColor="@color/white"
                        app:pstsIndicatorHeight="1dp"
                        app:pstsScaleZoomMax="0"
                        app:pstsShouldExpand="false"
                        app:pstsTabPaddingLeftRight="40dp"
                        app:pstsTextSelectedColor="@color/transparent"
                        app:pstsUnderlineColor="@android:color/transparent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/video_me_l"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/video_me_r"
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:gravity="center"
                            android:text=""
                            android:textColor="@color/color_999999"
                            android:textSize="14dp" />
                    </LinearLayout>
                </FrameLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

            </LinearLayout>

        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_vertical"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <android.support.v4.view.ViewPager
                android:id="@+id/mm_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/mm_back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@drawable/mm_back_2" />

        <TextView
            android:id="@+id/mm_details_nickname_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/mm_details_chat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="40dp"
            android:padding="10dp"
            android:src="@drawable/mm_chat"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mm_details_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:padding="8dp"
            android:src="@drawable/mm_more" />
    </FrameLayout>

    <View
        android:id="@+id/me_b_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#2b2b2b" />

</RelativeLayout>