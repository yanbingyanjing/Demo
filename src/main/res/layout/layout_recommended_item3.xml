<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="5dp">

        <com.yjfshop123.live.server.widget.CircleImageView
            android:id="@+id/recommended_item3_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />
        <!--app:civ_border_color="@color/color_style"
            app:civ_border_width="2dp"-->

        <!--<ImageView
            android:id="@+id/recommended_item3_vip_iv"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/icon_vip"
            android:visibility="gone" />-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="80dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recommended_item3_nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="14dp" />

                <!--<TextView
                    android:id="@+id/recommended_item3_vip_tv"
                    android:layout_width="32dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/_mm_vip"
                    android:gravity="center"
                    android:text="VIP"
                    android:textColor="#fc0201"
                    android:textSize="8dp" />-->

            </LinearLayout>

            <TextView
                android:id="@+id/recommended_item3_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="6dp"
                android:background="@drawable/_mm_details_01"
                android:drawableLeft="@drawable/male_icon"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text=" 0"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/recommended_item3_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="6dp"
                android:background="@android:color/transparent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/color_999999"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/location_icon"
                android:tint="@color/color_999999" />

            <TextView
                android:id="@+id/recommended_item3_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="1dp"
                android:textColor="@color/color_999999"
                android:textSize="10dp" />

        </LinearLayout>
    </FrameLayout>

    <!--<View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color" />-->

</LinearLayout>