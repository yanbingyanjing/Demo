<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mount_item_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mount_bg"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/mount_item_icon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/mount_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mount_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="6dp"
            android:textColor="#C0C0C0"
            android:visibility="gone"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mount_item_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mount_btn"
            android:paddingLeft="11dp"
            android:paddingTop="6dp"
            android:paddingRight="11dp"
            android:paddingBottom="6dp"
            android:textColor="#C7A774"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/remain_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:paddingBottom="6dp"

            />
    </LinearLayout>

</LinearLayout>