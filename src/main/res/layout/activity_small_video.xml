<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_theme">

        <FrameLayout
            android:id="@+id/home_container_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/small_video_home_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="首页"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/small_video_city_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="同城"
                android:textColor="@color/color_999999"
                android:textSize="15dp" />

            <ImageView
                android:id="@+id/small_video_add_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:padding="8dp"
                android:src="@drawable/small_video_add" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0">

                <TextView
                    android:id="@+id/small_video_message_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="消息"
                    android:textColor="@color/color_999999"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/small_video_unread_num"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="14dp"
                    android:gravity="center"
                    android:minWidth="16dp"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:visibility="invisible" />
            </FrameLayout>

            <TextView
                android:id="@+id/small_video_me_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/color_999999"
                android:textSize="15dp" />

        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="end" />
</android.support.v4.widget.DrawerLayout>


