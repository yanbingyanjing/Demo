<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:background="@drawable/popwindow_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/popupwindow_community_rl_1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/community_pop_icon_1"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/comm_1"
                android:textColor="@color/color_666666"
                android:textSize="13dp" />

        </RelativeLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="0px"
            android:background="@color/line_color" />


        <RelativeLayout
            android:id="@+id/popupwindow_community_rl_2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/community_pop_icon_2"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/comm_2"
                android:textColor="@color/color_666666"
                android:textSize="13dp" />


        </RelativeLayout>

        <View
            android:layout_width="100dp"
            android:layout_height="0px"
            android:background="@color/line_color"

            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/popupwindow_community_rl_3"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/community_pop_icon_3"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/comm_3"
                android:textColor="@color/color_666666"
                android:textSize="13dp" />


        </RelativeLayout>


        <View
            android:layout_width="100dp"
            android:layout_height="0px"
            android:background="@color/line_color"

            android:visibility="gone" />


        <RelativeLayout
            android:id="@+id/popupwindow_community_rl_4"
            android:layout_width="match_parent"
            android:layout_height="44dp"

            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/community_pop_icon_4"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="@string/comm_4"
                android:textColor="@color/color_666666"
                android:textSize="13dp" />


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>