<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="285dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/service_dialog_top_bg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="音效调节"
                android:textColor="@color/color_title_txt"
                android:textSize="14dp" />
        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_bulge_bg"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="伴奏"
                    android:textColor="@color/color_title_txt"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/live_sound_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:text="0"
                    android:textColor="@color/color_title_txt"
                    android:textSize="14dp" />
            </FrameLayout>

            <SeekBar
                android:id="@+id/live_sound_seekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="100"
                android:maxHeight="1.0dip"
                android:minHeight="1.0dip"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_drawable"
                android:thumb="@drawable/play_seekbar_icon" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:text="人声"
                    android:textColor="@color/color_title_txt"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/live_person_pro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:text="0"
                    android:textColor="@color/color_title_txt"
                    android:textSize="14dp" />
            </FrameLayout>

            <SeekBar
                android:id="@+id/live_person_seekBar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:max="100"
                android:maxHeight="1.0dip"
                android:minHeight="1.0dip"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_drawable"
                android:thumb="@drawable/play_seekbar_icon" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>