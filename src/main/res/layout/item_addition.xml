<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/bg_gold_egg_item"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingTop="17dp"
    android:paddingEnd="16dp"
    android:paddingBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="9dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="类型"

            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="金蛋加成"

            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="剩余加成"


            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/de_notification_start"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp"
            android:visibility="gone" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/has_jinxing_daying"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:text="@string/day_income"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingStart="9dp">

        <TextView
            android:id="@+id/origin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_CEAF82"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/jine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_CEAF82"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/left_addition"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textColor="@color/color_CEAF82"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/has_jinxing_daying"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:textColor="@color/color_CEAF82"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/day_income"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"

            android:layout_weight="1"
            android:textColor="@color/color_CEAF82"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_24CEAF82" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="11dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/de_notification_start_title"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/de_notification_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shao_shang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烧伤"
            android:textColor="@color/colorRed"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shao_shang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorRed"
            android:textSize="12sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/de_notification_end_title"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/de_notification_end"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_D2B994"
            android:textSize="12sp" />

    </LinearLayout>


</LinearLayout>