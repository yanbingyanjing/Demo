<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/h_1_top_view"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:background="@color/transparent" />

    <FrameLayout
        android:id="@+id/h_1_top_fl"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/white">

        <com.jpeng.jptabbar.PagerSlidingTabStrip
            android:id="@+id/h_1_nts_sty"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:textColor="@color/color_333333"
            android:textSize="16sp"
            app:pstsDividerColor="@android:color/transparent"
            app:pstsIndicatorColor="@color/transparent"
            app:pstsIndicatorHeight="2dp"
            app:pstsScaleZoomMax="0.2"
            app:pstsShouldExpand="false"
            app:pstsTabPaddingLeftRight="12dp"
            app:pstsTextSelectedColor="@color/color_style"
            app:pstsUnderlineColor="@android:color/transparent" />

        <ImageView
            android:id="@+id/h_1_list"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="40dp"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/f_h_list_icon" />

        <ImageView
            android:id="@+id/h_1_search"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_gravity="center_vertical|right"
            android:background="@null"
            android:scaleType="center"
            android:src="@drawable/conversation_search" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/h_1_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>




