<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0B0A08"
   >

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:id="@+id/one"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_0B0A08"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_211F1E"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="12dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_invite_code"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/invite_code"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/invite_copy_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/copy_btn"
                    android:textColor="@color/color_C5A364"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_211F1E"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xiazai_dizhi"

                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/download_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/download_url_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/copy_btn"
                    android:textColor="@color/color_C5A364"
                    android:textSize="14sp" />
            </LinearLayout>

            <com.zhouwei.mzbanner.MZBannerView
                android:id="@+id/mm_details_banner"
                android:layout_width="match_parent"
                android:layout_height="419dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="110dp"

                app:canLoop="true"
                app:indicatorAlign="center"

                app:middle_page_cover="false"
                app:open_mz_mode="true" />


        </LinearLayout>
    </ScrollView>
    <TextView
        android:id="@+id/crete_haibao"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bg_gradient_fae2ae_b28d51_21"
        android:gravity="center"
        android:paddingTop="12dp"
        android:layout_alignBottom="@+id/one"
        android:paddingBottom="12dp"
        android:text="@string/create_haibao"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>