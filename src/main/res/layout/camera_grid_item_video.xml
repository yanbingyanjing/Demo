<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <FrameLayout
        android:id="@+id/thumb_container"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp">

        <com.yjfshop123.live.server.widget.CircleImageView
            android:id="@+id/thumb"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/camera_video_grid_bg"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/hover"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <com.yjfshop123.live.live.live.common.widget.beautysetting.RoundProgressBar
            android:id="@+id/progress_round"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:visibility="gone"
            app:roundColor="#4cffffff"
            app:roundProgressColor="@color/color_style"
            app:roundWidth="3dp"
            app:textColorP="@color/color_style"
            app:textIsDisplayable="false"
            app:textSize="12sp" />

        <ImageView
            android:id="@+id/download"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="3dp"
            android:src="@drawable/ic_video_material_download"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/audio"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_camera_audio"
            android:visibility="gone" />

    </FrameLayout>

</RelativeLayout>