<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/ql_dialog_bg">

        <TextView
            android:id="@+id/ldbq_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="@string/sp_ql"
            android:textColor="@color/color_333333"
            android:textSize="14dp" />

        <ImageButton
            android:id="@+id/ldbq_cancel"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="2dp"
            android:background="@null"
            android:src="@drawable/ac_search_cancel_icon" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="@string/ql_sfbz"
            android:textColor="@color/color_333333"
            android:textSize="14dp" />

        <RelativeLayout
            android:id="@+id/ldbq_cost_rl"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ql_dialog_bg3">

            <TextView
                android:id="@+id/ldbq_cost_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ldbq_cost_tv_2"
                android:textColor="@color/color_333333"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/ldbq_cost_tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="@string/ql_cost"
                android:textColor="@color/color_333333"
                android:textSize="12dp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/task_right_icon" />
        </RelativeLayout>


    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:padding="20dp">

        <com.yjfshop123.live.ui.widget.WaveView
            android:id="@+id/wave_view"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            app:waveCenterIcon="@drawable/mm_sixinliaotian"
            app:waveCount="3" />

        <Button
            android:id="@+id/ldbq_ql"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="center"
            android:background="@drawable/ql_dialog_bg2"
            android:text="@string/ql_fq"
            android:textColor="@color/color_333333"
            android:textSize="14dp" />

    </FrameLayout>


</LinearLayout>