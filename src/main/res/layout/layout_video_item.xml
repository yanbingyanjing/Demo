<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.yjfshop123.live.server.widget.SelectableRoundedImageView
            android:id="@+id/video_item_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            app:sriv_left_bottom_corner_radius="4dip"
            app:sriv_left_top_corner_radius="4dip"
            app:sriv_right_bottom_corner_radius="4dip"
            app:sriv_right_top_corner_radius="4dip" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_gravity="bottom">

            <!--android:background="@drawable/_video_item_bg"-->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="15.5dp"
                    android:layout_height="9.5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/video_list_btn_yj"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/video_list_tv_yj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="9dp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="11dp"
                    android:layout_gravity="center"
                    android:paddingTop="1dp"
                    android:src="@drawable/video_list_btn_praise" />

                <TextView
                    android:id="@+id/video_item_praise_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/white"
                    android:textSize="9dp" />

            </LinearLayout>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>