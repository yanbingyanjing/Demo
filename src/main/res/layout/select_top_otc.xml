<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_select_btn">

    <TextView
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_select_btn_selector"
        android:paddingStart="25dp"
        android:paddingTop="8dp"
        android:paddingEnd="25dp"
        android:paddingBottom="8dp"
        android:text="@string/kuaijie"
        android:gravity="center"

        android:textColor="@drawable/bg_select_btn_text_selector"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-18dp"
        android:layout_toRightOf="@+id/left"
        android:background="@drawable/bg_select_btn_selector"
        android:paddingStart="25dp"
        android:paddingTop="8dp"
        android:paddingEnd="25dp"
android:gravity="center"
        android:paddingBottom="8dp"
        android:text="@string/zixuanqu"
        android:textColor="@drawable/bg_select_btn_text_selector"
        android:textSize="14sp" />
    <TextView
        android:id="@+id/huadong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_select_btn_selector"
        android:paddingStart="25dp"
        android:paddingTop="8dp"
        android:paddingEnd="25dp"
        android:gravity="center"

        android:paddingBottom="8dp"
        android:text="@string/kuaijie"
        android:textColor="@drawable/bg_select_btn_text_selector"
        android:textSize="14sp" />
</RelativeLayout>