<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/cmessage_item_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/cmessage_item_bg1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.yjfshop123.live.server.widget.CircleImageView
                    android:id="@+id/cmessage_item_portrait"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo" />

                <TextView
                    android:id="@+id/cmessage_item_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="昵称"
                    android:textColor="@color/color_3B3026"
                    android:textSize="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:src="@mipmap/ding" />

                <TextView
                    android:id="@+id/cmessage_item_hint_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="顶了这篇帖子"
                    android:textColor="@color/color_3B3026"
                    android:textSize="12dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:background="@color/color_4DDC6666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/cmessage_item_bg2"
                android:minHeight="50dp"
                android:orientation="horizontal">

                <com.yjfshop123.live.server.widget.SelectableRoundedImageView
                    android:id="@+id/cmessage_item_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    app:sriv_left_bottom_corner_radius="4dip"
                    app:sriv_left_top_corner_radius="4dip"
                    app:sriv_right_bottom_corner_radius="0dip"
                    app:sriv_right_top_corner_radius="0dip" />

                <TextView
                    android:id="@+id/cmessage_item_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="我的发帖:"
                    android:textColor="@color/color_3B3026"
                    android:textSize="12dp"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/cmessage_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.2"
                    android:maxLines="1"
                    android:text="文章"
                    android:textColor="@color/color_858483"
                    android:textSize="12dp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/cmessage_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="14dp"
            android:layout_marginRight="10dp"
            android:text="一天前"
            android:textColor="@color/color_B8B8B8"
            android:textSize="10dp" />

    </FrameLayout>

</FrameLayout>