<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/rc_text_color_primary</item>
        <item name="android:textColorSecondary">@color/rc_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/rc_text_color_tertiary</item>
        <item name="android:textColorPrimaryInverse">@color/rc_text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/rc_text_color_secondary_inverse</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:indeterminateDrawable">@drawable/rc_progress_round</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="MyTheme_Home" parent="Theme.AppCompat.Light.NoActionBar">
        <!--parent="@android:style/Theme.Holo.Light.NoActionBar"-->
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/rc_text_color_primary</item>
        <item name="android:textColorSecondary">@color/rc_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/rc_text_color_tertiary</item>
        <item name="android:textColorPrimaryInverse">@color/rc_text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/rc_text_color_secondary_inverse</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:indeterminateDrawable">@drawable/rc_progress_round</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="login_them" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/rc_text_color_primary</item>
        <item name="android:textColorSecondary">@color/rc_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/rc_text_color_tertiary</item>
        <item name="android:textColorPrimaryInverse">@color/rc_text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/rc_text_color_secondary_inverse</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:indeterminateDrawable">@drawable/rc_progress_round</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/login_anim</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="login_anim">
        <item name="android:windowEnterAnimation">@anim/bottom_in</item> <!-- 从下面弹出时的动画 -->
        <item name="android:windowExitAnimation">@anim/bottom_out</item> <!-- 从上面下滑到底部时的动画 -->
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="RCTheme.Message.TextView" parent="RCTheme.TextView">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/rc_rich_title</item>
    </style>

    <!--###-->
    <style name="MessageTranslucentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@android:color/transparent</item>
        <item name="android:listSelector">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/rc_text_color_primary</item>
        <item name="android:textColorSecondary">@color/rc_text_color_secondary</item>
        <item name="android:textColorTertiary">@color/rc_text_color_tertiary</item>
        <item name="android:textColorPrimaryInverse">@color/rc_text_color_primary_inverse</item>
        <item name="android:textColorSecondaryInverse">@color/rc_text_color_secondary_inverse</item>
        <item name="android:textColorTertiaryInverse">@android:color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:indeterminateDrawable">@drawable/rc_progress_round</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorMask</item>
    </style>
    <!--###-->

</resources>