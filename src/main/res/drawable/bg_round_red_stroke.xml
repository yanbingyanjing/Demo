<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--第一层阴影-->
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/red"/>

            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>
    <!--第二层前景-->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape
            android:shape="oval">
            <solid
                android:color="@color/white"/>

            <size
                android:width="10dp"
                android:height="10dp"/>
        </shape>
    </item>
</layer-list>